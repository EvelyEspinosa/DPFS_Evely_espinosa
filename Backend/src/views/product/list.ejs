<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/menu') %>

    <%- include('partials/header') %>
    <main>
        <h1>Listado de Productos</h1>
        <div>
        <a href="/create">Agregar Nuevo Producto</a>
        <ul class="product-list">
            <%= product.forEach(product => { %>
                <li class="product-item">
                    <img src="product.image" alt="product.name">
                    <div class="product-info">
                    <span><%= product.name %></span>
                     <span>$ <%= product.price %></span>
                    </div>
                    <div class="product-actions">
                    <a href="/product/:id/edit">Editar</a>
                    <form action="/product/:id ?_method=delete" method="POST" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>
                </div>
                </li>
            <%= }) %>
        </ul>
    </div>
</main>
<%- include('partials/footer') %>
<script type="module" src="../../../public/javascripts/product.js"></script>
<script type="module" src="../../../database/models/productModel.js"></script>
</body>
</html>